generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

model User {
  id              BigInt       @id @default(autoincrement())
  email           String    @unique @db.VarChar(255)
  password        String    @db.VarChar(255)
  nickname        String    @db.VarChar(50)
  profileImageUrl String?   @db.VarChar(500) @map("profile_image_url")
  bio             String?   @db.Text
  phoneNumber     String?   @db.VarChar(20) @map("phone_number")
  phoneVerified   Boolean   @default(false) @map("phone_verified")
  emailVerified   Boolean   @default(false) @map("email_verified")
  gender          Gender?
  birthDate       DateTime? @db.Date @map("birth_date")
  createdAt       DateTime  @default(now()) @db.Timestamp(3) @map("created_at")
  updatedAt       DateTime  @updatedAt @db.Timestamp(3) @map("updated_at")
  deletedAt       DateTime? @db.Timestamp(3) @map("deleted_at")

  @@map("users")
  @@index([deletedAt])
}

enum Gender {
  male
  female
  other
}

model VerificationCode {                                              
  email     String   @id
  code      String
  expiredAt DateTime @map("expired_at")
  createdAt       DateTime  @default(now()) @db.Timestamp(3) @map("created_at")

  @@map("verification_code")
}